<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_display_category_title">

        <SwitchPreference
            android:key="@string/pref_display_show_second_key"
            android:title="@string/pref_display_show_second_title"
            android:icon="@drawable/ic_pref_display_show_second"
            android:summary="@string/pref_display_show_second_summary"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_other_category_title">

        <Preference
            android:key="@string/pref_other_background_key"
            android:title="@string/pref_other_background_title"
            android:icon="@drawable/ic_pref_other_background"
            android:summary="@string/pref_other_background_summary" />

        <Preference
            android:key="@string/pref_other_about_key"
            android:title="@string/pref_other_about_title"
            android:icon="@drawable/ic_pref_other_about">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="@string/package_name"
                android:targetClass="@string/pref_about_class_name"/>

        </Preference>

    </PreferenceCategory>
</PreferenceScreen>